<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="greetingsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/textViewBackground</item>
        <item name="android:padding">@dimen/smallPaddingTextView</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textViewColour</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:textSize">@dimen/greetingsTextSize</item>
        <item name="android:textStyle"></item>
    </style>

    <style name="nameEditTextStyle">
